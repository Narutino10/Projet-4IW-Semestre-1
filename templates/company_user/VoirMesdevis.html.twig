{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
	<div class="  flex">
	{% include 'partials/_sidebar.html.twig' %}

		<div class=" bg-fullPink mx-auto flex flex-col items-center justify-center h-screen w-full">

			<header>
				<h2 class="text-xl font-bold mb-4">Mes devis</h2>
			</header>
			<main class="py-8">
				<section class="mb-8">


					<div class="flex text-xs items-center justify-between  rounded-md px-4 py-2">
						<label for="date" class="text-gray-500 mr-2">Date de fabrication</label>
						<input type="date" id="date" class="border border-gray-300 rounded-md px-3 py-2 mr-2 focus:ring-blue-500 focus:ring-opacity-50" placeholder="Date de fabrication">
						<label for="montant" class="text-gray-500 mr-2">Montant</label>
						<input type="text" id="montant" class="border border-gray-300 rounded-md px-3 py-2 flex-grow focus:ring-blue-500 focus:ring-opacity-50" placeholder="Montant">
					</div>


				</section>
			</main>


			<div class="flex flex-col overflow-y-scroll  px-4 p-4 items-center justify-between py-2 w-1/2  ">

				<table class="table-auto m-15 text-xs w-full bg-white shadow-md rounded-lg">
					<thead>
						<tr>
							<th class="px-4 py-2 text-left  font-bold">Nom</th>
							<th class="px-4 py-2 text-left  font-bold">Prénom</th>
							<th class="px-4 py-2 text-left  font-bold">Numéro de devis</th>
							<th class="px-4 py-2 text-left  font-bold">Date de fabrication</th>
							<th class="px-4 py-2 text-left  font-bold">Etat</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td class="px-4 py-2 border-b border-gray-300">Sid ahmedi</td>
							<td class="px-4 py-2 border-b border-gray-300">Younes</td>
							<td class="px-4 py-2 border-b border-gray-300">12323AZRE</td>
							<td class="px-4 py-2 border-b border-gray-300">17-06-2016</td>
							<td class="px-4 py-2 border-b border-gray-300">En attente</td>
							<td class="px-4 py-2 border-b border-gray-300">
								<a class="px-2 text-xxs rounded-full text-white bg-purpleM" href="#">Voir</a>
							</td>
						</tr>

					</tbody>
				</table>

				<table class="table-auto m-15 text-xs w-full bg-white shadow-md rounded-lg">
					<thead>
						<tr>
							<th class="px-4 py-2 text-left  font-bold">Nom</th>
							<th class="px-4 py-2 text-left  font-bold">Prénom</th>
							<th class="px-4 py-2 text-left   font-bold">Numéro de devis</th>
							<th class="px-4 py-2 text-left   font-bold">Date de fabrication</th>
							<th class="px-4 py-2 text-left   font-bold">Etat</th>
						</tr>
					</thead>
					<tbody>
						{% for devi in devis %}
							<tr>
								<td class="px-4 py-2 border-b border-gray-300">{{ devi.firstName }}</td>
								<td class="px-4 py-2 border-b border-gray-300">{{ devi.lastName }}</td>
								<td class="px-4 py-2 border-b border-gray-300">{{ devi.id }}</td>
								<td class="px-4 py-2 border-b border-gray-300">{{ devi.date|date('d-m-Y') }}</td>
								<td class="px-4 py-2 border-b border-gray-300 text-green">{{ devi.status }}</td>
								<td class="px-4 py-2 border-b border-gray-300">
									<a class="px-2 text-xxs rounded-full text-white bg-purpleM" href="{{ path('devis_show', {'id': devi.id}) }}">Voir</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>


{% endblock %}
