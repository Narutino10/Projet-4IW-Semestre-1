{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
	<div class="  flex">

		<div class="bg-gray-100  p-4 w-64 h-full fixed top-0 left-0 z-10">


			<div class="mb-2 flex items-center justify-center">
				<img src="{{ asset('/images/logo2.png') }}" alt="Logo" class="h-12 rounded-full mr-4">

			</div>

			<div class="flex flex-col h-full items-center">

				<div class="flex-1 overflow-y-auto absolute top-50 left-50 transform translate-x(-50%) translate-y(-50%)">

					<ul class="p-4">


						<li class="mb-2 p-4 flex items-center justify-center">
							<a href="{{ url('Monprofil') }}" class="text-purpleM hover:text-purpleM-300">Mon profil</a>
						</li>
						<li class="mb-2 p-4 flex items-center justify-center">
							<a href=" {{ url('Lesfactures') }}" class="text-purpleM hover:text-purpleM-300">Voir les factures</a>
						</li>
						<li class="mb-2 p-4 flex items-center justify-center">
							<a href="{{ url('Lesdevis') }}" class="text-purpleM hover:text-purpleM-300">Voir les devis</a>
						</li>
						<li class="mb-2 p-4 flex items-center justify-center">
							<a href="{{ url('Lespaiements') }}" class="text-purpleM hover:text-purpleM-300">Voir les paiements</a>
						</li>


					</ul>
				</div>

			</div>
		</div>


		<div class=" bg-fullPink mx-auto flex flex-col items-center justify-center h-screen w-full">

			<header>
				<h2 class="text-xl font-bold mb-4">Mon profil</h2>
			</header>

			<form class="flex flex-col items-center justify-center p-4 bg-gray-200 rounded-md shadow-sm">

				<div class="flex ">
					<label for="nom" class="text-gray-500 mb-2">Nom</label>
					<input type="text" id="nom" class="block border w-full p-2 rounded-md focus:ring-blue-500 focus:ring-opacity-50" placeholder="Votre nom">
				</div>
				<label for="email" class="text-gray-500 mb-2 mt-4">Email</label>
				<input type="email" id="email" class="block border w-full p-2 rounded-md focus:ring-blue-500 focus:ring-opacity-50" placeholder="Votre adresse email">
				<label for="message" class="text-gray-500 mb-2 mt-4">Message</label>
				<textarea id="message" class="block border w-full p-2 rounded-md h-24 focus:ring-blue-500 focus:ring-opacity-50" placeholder="Votre message"></textarea>
				<button type="submit" class="bg-blue-500 text-white py-2 px-4 rounded-md focus:ring-blue-500 focus:ring-opacity-50 hover:bg-blue-700">Envoyer</button>
			</form>


		{% endblock %}
