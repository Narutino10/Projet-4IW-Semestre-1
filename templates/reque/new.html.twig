        <div class="py-2">
            <label for="eventCountry" class="px-1 text-sm text-gray-600">Pays de l'événement</label>
            <input type="text" name="eventCountry" id="eventCountry" placeholder="Pays"
                   class="text-md block px-3 py-2 rounded-lg w-full bg-white border-2 border-gray-300 shadow-md focus:border-gray-600 focus:outline-none">
        </div>

        <!-- Champ Ville de l'événement -->
        <div class="py-2">
