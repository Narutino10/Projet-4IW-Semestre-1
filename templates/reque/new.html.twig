        </div>

        <!-- Champ Code de l'événement -->
        <div class="py-2">
            <label for="eventCode" class="px-1 text-sm text-gray-600">Code Postale</label>
            <input type="text" name="eventCode" id="eventCode" placeholder="Code Postal"
                   class="text-md block px-3 py-2 rounded-lg w-full bg-white border-2 border-gray-300 shadow-md focus:border-gray-600 focus:outline-none">
        </div>

        <!-- Champ Nom -->
        <div class="py-2">
            <label for="lastname" class="px-1 text-sm text-gray-600">Nom</label>
