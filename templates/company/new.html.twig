{% extends 'base.html.twig' %}

{% block title %}New company
{% endblock %}

{% block body %}
<header>
<br>
 <nav class="border-gray-200 px-50 mb-10">
  <div class="container mx-auto flex flex-wrap items-center justify-between">
  <a href="#" class="flex">
    <svg class="h-10 " width="51" height="70" viewBox="0 0 51 70" fill="none" xmlns="http://www.w3.org/2000/svg"><g clip-path="url(#clip0)"><path d="M1 53H27.9022C40.6587 53 51 42.7025 51 30H24.0978C11.3412 30 1 40.2975 1 53Z" fill="#76A9FA"></path><path d="M-0.876544 32.1644L-0.876544 66.411C11.9849 66.411 22.4111 55.9847 22.4111 43.1233L22.4111 8.87674C10.1196 8.98051 0.518714 19.5571 -0.876544 32.1644Z" fill="#A4CAFE"></path><path d="M50 5H23.0978C10.3413 5 0 15.2975 0 28H26.9022C39.6588 28 50 17.7025 50 5Z" fill="#1C64F2"></path></g><defs><clipPath id="clip0"><rect width="51" height="70" fill="white"></rect></clipPath></defs></svg>
      <span class="self-center text-lg font-semibold whitespace-nowrap">Haze</span>
  </a>
  
  <div class="flex md:order-2">
      <div class="relative mr-3 md:mr-0 hidden md:block">
       
       
</header>
<!-- Body -->
<div class="container max-w-full mx-auto py-24 px-6">
    <div class="font-sans">
        <div class="max-w-sm mx-auto px-6">
            <div class="relative flex flex-wrap">
                <div class="w-full relative">
                    <div class="mt-6">
                        <div class="mb-5 pb-1 border-b-2 text-center font-base text-purple-500">
                            <!-- Titre -->
Creez votre organisation                        </div>
                        <div class="text-center font-semibold text-black">
Le debut d'une grande aventure !                        </div>

                        <!-- Formulaire -->
                        <form class="mt-8" action="{{ path('app_company_new', {'id': app.user.id}) }}" method="post">
                            <div class="mx-auto max-w-lg">
                                <!-- Champ Nom -->
                                <div class="py-2">
                                    <label for="name" class="px-1 text-sm text-gray-600">Nom</label>
                                    <input type="text" name="name" id="name" placeholder="Nom de votre Organisation"
                                           class="text-md block px-3 py-2 rounded-lg w-full bg-white border-2 border-gray-300 placeholder-gray-600 shadow-md focus:placeholder-gray-500 focus:bg-white focus:border-gray-600 focus:outline-none">
                                </div>

                                <!-- Champ Adresse -->
                                <div class="py-2">
                                    <label for="address" class="px-1 text-sm text-gray-600">Adresse</label>
                                    <input type="text" name="address" id="address" placeholder="Adresse"
                                           class="text-md block px-3 py-2 rounded-lg w-full bg-white border-2 border-gray-300 placeholder-gray-600 shadow-md focus:placeholder-gray-500 focus:bg-white focus:border-gray-600 focus:outline-none">
                                </div>

       <div class="flex items-center justify-center">
    <!-- Champ Logo -->
    <div class="mr-4">
        <label class="w-32 flex flex-col items-center px-4 py-2 bg-white text-blue rounded-lg shadow-lg cursor-pointer hover:bg-black hover:text-white">
            <svg class="w-6 h-6" fill="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                <path d="M16.88 9.1A4 4 0 0 1 16 17H5a5 5 0 0 1-1-9.9V7a3 3 0 0 1 4.52-2.59A4.98 4.98 0 0 1 17 8c0 .38-.04.74-.12 1.1zM11 11h3l-4-4-4 4h3v3h2v-3z" />
            </svg>
            <span class="mt-1 text-xs">Logo</span>
            <input type='file' class="hidden" />
        </label>
    </div>

    <!-- Champ Bannière -->
    <div class="ml-4">
        <label class="w-32 flex flex-col items-center px-4 py-2 bg-white text-blue rounded-lg shadow-lg cursor-pointer hover:bg-black hover:text-white">
            <svg class="w-6 h-6" fill="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                <path d="M16.88 9.1A4 4 0 0 1 16 17H5a5 5 0 0 1-1-9.9V7a3 3 0 0 1 4.52-2.59A4.98 4.98 0 0 1 17 8c0 .38-.04.74-.12 1.1zM11 11h3l-4-4-4 4h3v3h2v-3z" />
            </svg>
            <span class="mt-1 text-xs">Bannière</span>
            <input type='file' class="hidden" />
        </label>
    </div>
</div>



                                <!-- Champ Email -->
                                <div class="py-2">
                                    <label for="email" class="px-1 text-sm text-gray-600">Email</label>
                                    <input type="email" name="email" id="email" placeholder="Votre mail"
                                           class="text-md block px-3 py-2 rounded-lg w-full bg-white border-2 border-gray-300 placeholder-gray-600 shadow-md focus:placeholder-gray-500 focus:bg-white focus:border-gray-600 focus:outline-none">
                                </div>

                                <!-- Champ Catégorie -->
                                <div class="py-2">
                                    <label for="categorie" class="px-1 text-sm text-gray-600">Catégorie</label>
                                    <select name="categorie" id="categorie"
                                            class="text-md block px-3 py-2 rounded-lg w-full bg-white border-2 border-gray-300 placeholder-gray-600 shadow-md focus:placeholder-gray-500 focus:bg-white focus:border-gray-600 focus:outline-none">
                                        <option value="EVENEMENT">Événement</option>
                                        <option value="ANNIVERSAIRE">Anniversaire</option>
                                        <option value="MARIAGE">Mariage</option>
                                        <option value="CONCERT">Concert</option>
                                    </select>
                                </div>

                                <!-- Champ Numéro de téléphone -->
                                <div class="py-2">
                                    <label for="phoneNumber" class="px-1 text-sm text-gray-600">Numéro de téléphone</label>
                                    <input type="text" name="phoneNumber" id="phoneNumber" placeholder="Numéro de téléphone"
                                           class="text-md block px-3 py-2 rounded-lg w-full bg-white border-2 border-gray-300 placeholder-gray-600 shadow-md focus:placeholder-gray-500 focus:bg-white focus:border-gray-600 focus:outline-none">
                                </div>

                                <!-- Champ Numéro de taxe -->
                                <div class="py-2">
                                    <label for="taxNumber" class="px-1 text-sm text-gray-600">Numéro de taxe</label>
                                    <input type="text" name="taxNumber" id="taxNumber" placeholder="Numéro de taxe"
                                           class="text-md block px-3 py-2 rounded-lg w-full bg-white border-2 border-gray-300 placeholder-gray-600 shadow-md focus:placeholder-gray-500 focus:bg-white focus:border-gray-600 focus:outline-none">
                                </div>

                                <!-- Champ SIRET -->
                                <div class="py-2">
                                    <label for="siretNumber" class="px-1 text-sm text-gray-600">Numéro de SIRET</label>
                                    <input type="text" name="siretNumber" id="siretNumber" placeholder="Numéro de SIRET"
                                           class="text-md block px-3 py-2 rounded-lg w-full bg-white border-2 border-gray-300 placeholder-gray-600 shadow-md focus:placeholder-gray-500 focus:bg-white focus:border-gray-600 focus:outline-none">
                                </div>

                                <!-- Bouton de soumission -->
                                <button type="submit"
                                        class="mt-3 text-lg font-semibold bg-blue-500 w-full text-white rounded-lg px-6 py-3 block shadow-xl hover:text-white hover:bg-black">
                                    Enregistrer
                                </button>

                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Footer -->
{% include 'partials/footer.html.twig' %}

{% endblock %}

