{% extends 'base.html.twig' %}

{% block title %}company index{% endblock %}

{% block body %}
    <h1>company index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>Logo</th>
                <th>Banner</th>
                <th>Email</th>
                <th>PhoneNumber</th>
                <th>TaxNumber</th>
                <th>SiretNumber</th>
                <th>Likes</th>
                <th>UpdatedAt</th>
                <th>CreatedAt</th>
                <th>State</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for company in companys %}
            <tr>
                <td>{{ company.id }}</td>
                <td>{{ company.name }}</td>
                <td>{{ company.address }}</td>
                <td>{{ company.logo }}</td>
                <td>{{ company.banner }}</td>
                <td>{{ company.email }}</td>
                <td>{{ company.phoneNumber }}</td>
                <td>{{ company.taxNumber }}</td>
                <td>{{ company.siretNumber }}</td>
                <td>{{ company.likes }}</td>
                <td>{{ company.updatedAt ? company.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ company.createdAt ? company.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ company.state }}</td>
                <td>{{ company.slug }}</td>
                <td>
                    <a href="{{ path('app_company_show', {'slug': company.slug}) }}">show</a>
                    <a href="{{ path('app_company_edit', {'slug': company.slug}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="16">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_company_new', {'id': app.user.id}) }}">nouvelle company</a>


{% endblock %}
