{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
            {{ flash_error }}
        </div>
    {% endfor %}

    <h1 class="text-2xl font-bold mb-4">Register</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        <div class="mb-4">
            {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-4">
            {{ form_row(registrationForm.lastname, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-4">
            {{ form_row(registrationForm.firstname, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-4">
            {{ form_row(registrationForm.username, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-4">
            {{ form_row(registrationForm.birthdate, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-4">
            {{ form_row(registrationForm.picture, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-4">
            {{ form_row(registrationForm.password, {'attr': {'class': 'form-control'}}) }}
        </div>
        <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
