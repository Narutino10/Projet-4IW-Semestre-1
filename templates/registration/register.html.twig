{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
	<div class="flex flex-col items-center justify-center min-h-screen py-12">
		<div class="bg-white shadow-md rounded-lg p-8 w-full max-w-md">
			<header class="flex justify-center items-center">
				<img src="{{ asset ('/images/logo2.png') }}" alt="Logo" class="h-12 rounded-full mr-4" width="93">
			</header>
			<form action="{{ path('app_register') }}" method="post">
				{% if app.flashes('verify_email_error') %}
					<div class="alert alert-danger">{{ app.flashes('verify_email_error')[0] }}</div>
				{% endif %}

				{% if app.user %}
					<div class="mb-3">
						You are logged in as
						{{ app.user.userIdentifier }},
						<a href="{{ path('app_logout') }}">Logout</a>
					</div>
				{% endif %}
				{% for flash_error in app.flashes('verify_email_error') %}
					<div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
						{{ flash_error }}
					</div>
				{% endfor %}

    <h1 class="text-2xl font-bold mb-4">Register</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        <div class="mb-4">
            {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-4">
            {{ form_row(registrationForm.lastname, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-4">
            {{ form_row(registrationForm.firstname, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-4">
            {{ form_row(registrationForm.username, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-4">
            {{ form_row(registrationForm.birthdate, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-4">
            {{ form_row(registrationForm.picture, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-4">
            {{ form_row(registrationForm.password, {'attr': {'class': 'form-control'}}) }}
        </div>
		<div class="flex items-center justify-between ">
       		<button type="submit" class="bg-purple-600 mx-auto hover:bg-purple-700 text-white font-bold py-2 px-4 rounded-md">S'inscrire</button>
		</div>
	{{ form_end(registrationForm) }}
{% endblock %}